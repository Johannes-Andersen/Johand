{
  "name": "johand-dev",
  "private": true,
  "license": "GPL-3.0",
  "packageManager": "npm@8.19.2",
  "workspaces": [
    "apps/*",
    "packages/*",
    "e2e"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "e2e": "turbo run e2e",
    "e2e:dev": "turbo run e2e:dev",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,md}\""
  },
  "engines": {
    "npm": "^8",
    "node": ">=18"
  },
  "devDependencies": {
    "prettier": "2.7.1",
    "turbo": "1.5.2"
  }
}
